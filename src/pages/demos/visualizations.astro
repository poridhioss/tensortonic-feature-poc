---
import '../../styles/global.css';
import Header from '../../components/Header.astro';

// Statistics
import NormalDistribution from '../../components/visualizations/NormalDistribution.astro';
import CorrelationExplorer from '../../components/visualizations/CorrelationExplorer.astro';
import OutlierImpact from '../../components/visualizations/OutlierImpact.astro';
import CentralLimitTheorem from '../../components/visualizations/CentralLimitTheorem.astro';
import SkewnessExplorer from '../../components/SkewnessExplorer.astro';

// Linear Algebra
import VectorAddition from '../../components/visualizations/VectorAddition.astro';
import MatrixTransform from '../../components/visualizations/MatrixTransform.astro';

// Calculus
import DerivativeTangent from '../../components/visualizations/DerivativeTangent.astro';
import GradientDescent from '../../components/visualizations/GradientDescent.astro';
import LearningRate from '../../components/visualizations/LearningRate.astro';

// Probability
import CoinFlip from '../../components/visualizations/CoinFlip.astro';
import BayesTheorem from '../../components/visualizations/BayesTheorem.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Visualization Gallery | ML Math</title>
    <meta name="description" content="Interactive visualizations for learning machine learning mathematics" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" />
  </head>
  <body>
    <Header />
    <main class="container">
      <div class="header-section">
        <h1>Visualization Gallery</h1>
        <p class="subtitle">Interactive visualizations to help you understand ML mathematics concepts</p>
      </div>

      <nav class="toc">
        <h3>Jump to Section</h3>
        <ul>
          <li><a href="#statistics">Statistics</a></li>
          <li><a href="#linear-algebra">Linear Algebra</a></li>
          <li><a href="#calculus">Calculus</a></li>
          <li><a href="#probability">Probability</a></li>
        </ul>
      </nav>

      <section id="statistics" class="section">
        <h2>Statistics</h2>
        <p class="section-desc">Understand data distributions, central tendency, and statistical relationships.</p>

        <NormalDistribution />
        <SkewnessExplorer />
        <CentralLimitTheorem />
        <CorrelationExplorer />
        <OutlierImpact />
      </section>

      <section id="linear-algebra" class="section">
        <h2>Linear Algebra</h2>
        <p class="section-desc">Visualize vectors, matrices, and linear transformations.</p>

        <VectorAddition />
        <MatrixTransform />
      </section>

      <section id="calculus" class="section">
        <h2>Calculus</h2>
        <p class="section-desc">Explore derivatives, gradients, and optimization algorithms.</p>

        <DerivativeTangent />
        <GradientDescent />
        <LearningRate />
      </section>

      <section id="probability" class="section">
        <h2>Probability</h2>
        <p class="section-desc">Understand probability theory and Bayesian reasoning.</p>

        <CoinFlip />
        <BayesTheorem />
      </section>

      <footer class="footer">
        <a href="/ml-math">‚Üê Back to ML Math</a>
      </footer>
    </main>
  </body>
</html>

<style>
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .header-section {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--cyan-500), var(--emerald-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0 0 1rem 0;
  }

  .subtitle {
    font-size: 1.1rem;
    color: var(--zinc-400);
    margin: 0;
  }

  .toc {
    background: var(--zinc-900);
    border: 1px solid var(--zinc-800);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 3rem;
  }

  .toc h3 {
    font-size: 0.9rem;
    color: var(--zinc-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 1rem 0;
  }

  .toc ul {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc a {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--zinc-800);
    border-radius: 6px;
    color: var(--zinc-300);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.2s;
  }

  .toc a:hover {
    background: var(--zinc-700);
    color: var(--zinc-100);
  }

  .section {
    margin-bottom: 4rem;
    scroll-margin-top: 80px;
  }

  .section h2 {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--zinc-100);
    margin: 0 0 0.5rem 0;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--zinc-800);
  }

  .section-desc {
    color: var(--zinc-400);
    margin: 0 0 2rem 0;
  }

  .footer {
    text-align: center;
    padding: 2rem;
    border-top: 1px solid var(--zinc-800);
    margin-top: 2rem;
  }

  .footer a {
    color: var(--cyan-500);
    text-decoration: none;
    font-weight: 500;
  }

  .footer a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }
  }
</style>
